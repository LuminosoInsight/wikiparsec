name:                wikiparsec
version:             0.2.0
synopsis:            An LL parser for extracting information from Wiki text, particularly Wiktionary.
-- description:
homepage:            http://github.com/LuminosoInsight/wikiparsec
license:             MIT
license-file:        LICENSE
author:              Rob Speer
maintainer:          rspeer@luminoso.com
-- copyright:
category:            Text
build-type:          Simple
cabal-version:       >=1.8

Library
  exposed-modules:     Text.Language.Normalize,
                       Text.MediaWiki.WikiText,
                       Text.MediaWiki.Wiktionary.Base,
                       Text.MediaWiki.Wiktionary.English,
                       WikiPrelude
  other-modules:       Data.LanguageNamesData, Text.MediaWiki.ParseTools,
                       Text.MediaWiki.SplitUtils, Text.MediaWiki.AnnotatedText,
                       Text.MediaWiki.Templates, Text.MediaWiki.Sections,
                       Text.MediaWiki.HTML,
                       Data.LanguageType, Data.LanguageNames
  build-depends:       HUnit,
                       base,
                       classy-prelude ==0.12.*,
                       string-conversions ==0.4.*,
                       utf8-string,
                       stringsearch,
                       text-icu ==0.7.*,
                       split,
                       text, bytestring, containers,
                       unicode-show,
                       attoparsec ==0.13.*,
                       parsec ==3.1.*,
                       mtl,
                       tagsoup,
                       fast-tagsoup-utf8-only,
                       hexpat ==0.20.*,
                       aeson

Executable wiki2text
  ghc-options:
    -threaded
    -O2
  main-is:             cmd/Wiki2Text.lhs
  other-modules:       Data.LanguageNamesData, Text.MediaWiki.ParseTools,
                       Text.MediaWiki.SplitUtils, Text.MediaWiki.AnnotatedText,
                       Text.MediaWiki.Templates, Text.MediaWiki.Sections,
                       Text.MediaWiki.HTML, Text.MediaWiki.XML,
                       Data.LanguageType, Data.LanguageNames,
                       Text.MediaWiki.WikiText,
                       WikiPrelude
  build-depends:       base,
                       classy-prelude ==0.12.*,
                       string-conversions ==0.4.*,
                       utf8-string,
                       stringsearch,
                       text-icu ==0.7.*,
                       split,
                       text, bytestring, containers,
                       unicode-show,
                       attoparsec ==0.13.*,
                       parsec ==3.1.*,
                       mtl,
                       tagsoup,
                       fast-tagsoup-utf8-only,
                       hexpat ==0.20.*,
                       aeson

Executable wiktionary-parser
  ghc-options:
    -threaded
    -O2
  main-is:             cmd/WiktionaryParser.lhs
  build-depends:       base,
                       classy-prelude ==0.12.*,
                       string-conversions ==0.4.*,
                       utf8-string,
                       stringsearch,
                       text-icu ==0.7.*,
                       split,
                       text, bytestring, containers,
                       unicode-show,
                       attoparsec ==0.13.*,
                       parsec ==3.1.*,
                       mtl,
                       tagsoup,
                       fast-tagsoup-utf8-only,
                       hexpat ==0.20.*,
                       aeson

